#!/usr/bin/python3

"""Docstring"""


def find_peak(list_of_integers):
    """
    This function finds the peak (largest element) in a list of integers.

    Args:
        list_of_integers: A list of integers.

    Returns:
        The peak (largest element) in the list, or None if the list is empty.
    """

    if not list_of_integers:
        return None
    peak = list_of_integers[0]
    for num in list_of_integers[1:]:
        if num > peak:
            peak = num
    return peak
